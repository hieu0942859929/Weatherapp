<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
>

    <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="180dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_border_item_1">

            <TextView
                    android:id="@+id/dayofweek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="13dp"
                    android:textColor="#FFFFFF"
                    android:text="giờ"
                    android:textSize="13dp"></TextView>

            <ImageView
                    android:id="@+id/imageStatus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/dayofweek"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/backgroud_imgae"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_arrow_downward_24"></ImageView>

            <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageStatus"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border_tv_temp"
                    android:textColor="#FFFFFF"
                    android:padding="10dp"
                    android:text="temp"
                    android:textSize="15dp"></TextView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
