<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/tvairQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:text="Chất lượng không khí"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/airQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvairQuality"
            android:layout_marginStart="5dp"
            android:textColor="#FFFFFF"/>

    <TextView
            android:id="@+id/tvcQMatter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/airQuality"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Chỉ số hạt thô"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/cQMatter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvcQMatter"
            android:layout_marginStart="5dp"
            android:textColor="#FFFFFF"/>

    <TextView
            android:id="@+id/tvCO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Chỉ số CO"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/CO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCO"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"/>

    <TextView
            android:id="@+id/tvfQMatter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:text="Chỉ số hạt mịn"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/fQMatter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvfQMatter"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:textColor="#FFFFFF"/>

    <TextView
            android:id="@+id/tvNO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cQMatter"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Chỉ số NO"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/NO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNO"
            android:layout_marginStart="5dp"
            android:textColor="#FFFFFF"/>

    <TextView
            android:id="@+id/tvNO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CO"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Chỉ số NO2"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/NO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNO2"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"/>

    <TextView
            android:id="@+id/tvO3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fQMatter"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Chỉ số O3"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/O3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvO3"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:textColor="#FFFFFF"/>

    <TextView
            android:id="@+id/tvSO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/O3"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Chỉ số SO2"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/SO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSO2"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:textColor="#FFFFFF"/>

    <TextView
            android:id="@+id/tvNH3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/O3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Chỉ số NH3 "
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/NH3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNH3"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="5dp"
            android:textColor="#FFFFFF"/>
</RelativeLayout>
